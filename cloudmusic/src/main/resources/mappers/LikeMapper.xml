<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace='com.example.cloudmusic.dao.LikeDao'>

    <select id="getLike" parameterType="java.lang.String" resultType="java.lang.Integer">
		select count(*) from likeSong where uuid = #{uuid} and songId = #{songId}
	</select>

	<select id="getLikeList" parameterType="java.lang.String" resultType="java.lang.String">
		select songId from likeSong where uuid = #{uuid}
	</select>

	<!-- 添加喜欢 -->
	<insert id="addLike" parameterType="java.lang.String">
        insert into likeSong (uuid,songId) value(#{uuid}, #{songId})
	</insert>

	<!-- 删除喜欢 -->
	<delete id="delLike">
		delete from likeSong where uuid = #{uuid} and songId = #{songId}
	</delete>
</mapper>