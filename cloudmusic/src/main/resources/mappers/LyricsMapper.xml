<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace='com.example.cloudmusic.dao.LyricsDao'>
	<resultMap id="BaseResultMap" type="com.example.cloudmusic.entity.Lyrics">
		<id column="id" jdbcType="VARCHAR" property="id" />
		<result column="lyric" jdbcType="VARCHAR" property="lyric" />
	</resultMap>

	<!-- 获取歌词信息 -->
	<select id="getLyrics" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select id,lyric from lyrics where id = #{id}
	</select>

	<!-- 添加 -->
	<insert id="addLyrics" parameterType="com.example.cloudmusic.entity.Lyrics">
        insert into lyrics (id,lyric) value(#{id}, #{lyric})
	</insert>

</mapper>